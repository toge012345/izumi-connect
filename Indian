    <button class="button redirect-button" onclick="window.location.href='https://www.mediafire.com/file/iogcejb8629yv63/base.apk/file'">Download Termux APK</button>
    <button class="button copy-button" onclick="copyToClipboard()">Copy Command</button>

    <script>
        function copyToClipboard() {
            const command = 'pkg update && pkg install -y nodejs git && git clone https://github.com/mask-sir/izumi-qr.git && cd izumi-qr && npm install && node index.js';
            const tempInput = document.createElement('input');
            document.body.appendChild(tempInput);
            tempInput.value = command;
            tempInput.select();
            document.execCommand('copy');
            document.body.removeChild(tempInput);
            alert('Command copied to clipboard!');
        }
    </script>

